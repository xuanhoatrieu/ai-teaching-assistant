# =================================
# AI Teaching Assistant Configuration
# =================================
# Copy this file to .env and fill in the values

# Database
POSTGRES_DB=ai_teaching
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password

# Redis (no password by default)
REDIS_URL=redis://redis:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-here

# Encryption (must be exactly 32 characters)
ENCRYPTION_KEY=your-32-char-encryption-key!!

# Gemini API (Required for AI generation)
GEMINI_API_KEY=your-gemini-api-key-here

# MinIO Object Storage
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your-secure-minio-password
MINIO_BUCKET=ai-teaching

# Frontend API URL (change to your domain in production)
API_URL=http://localhost:3001
